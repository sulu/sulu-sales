{% if data is defined and data is not null %}
    <div class="grid-row m-bottom-30">
        <h5 class="label"><%=translate('salescore.sidebar.customer')%></h5>

        <div id="sidebar-account" data-id="{{ data.id }}" class="show-icon grid-row m-bottom-0">
            <h4 class="m-top-0 m-bottom-0 action" data-id="{{ data.id }}">{{ data.name }}
                <span class="blue-icon"><span class="fa-pencil"></span></span>
            </h4>
        </div>

        {% if data.phone is not empty %}
            <span class="block grey">(<%=translate('public.phone')%>) {{ data.phone }}</span>
        {% endif %}

        <span class="block">
             <a class="action" href="mailto:{{ data.email }}">
                 {{ data.email }}
             </a>
         </span>

        {% if data.address is defined %}
            {% include 'SuluSalesCoreBundle:Widgets:Partials/address.partial.html.twig' with {'address': data.address} only %}
        {% endif %}

    </div>
{% endif %}
