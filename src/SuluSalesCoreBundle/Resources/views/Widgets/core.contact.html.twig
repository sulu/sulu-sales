{% if data is defined and data is not null %}
    <h5 class="label"><%=translate('salescore.sidebar.contact')%></h5>
    <div class="grid-row m-bottom-30">

        <div id="sidebar-contact" data-id="{{ data.id }}" class="show-icon grid-row m-bottom-0">
            <h4 class="m-top-0 m-bottom-0 action" data-id="{{ data.id }}">{{ data.fullName }}
                <span class="blue-icon"><span class="fa-pencil"></span></span>
            </h4>
        </div>

        {% if data.phone is not empty %}
            <span class="grey block">(<%=translate('public.phone')%>) {{ data.phone }}</span>
        {% endif %}
        <span class="grey block"><a class="action" href="mailto:{{ data.email }}">{{ data.email }}</a></span>
    </div>
{% endif %}

