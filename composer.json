{
    "name": "sulu/sulu-sales",
    "type": "sulu-bundle",
    "description": "Commerce Bundles of Sulu",
    "license": "MIT",
    "keywords": [
        "sulu",
        "sales",
        "commerce"
    ],
    "version": "dev-develop",
    "authors": [
        {
            "name": "Sulu Community",
            "homepage": "https://github.com/sulu-cmf/SuluSalesCoreBundle/contributors"
        }
    ],
    "require": {
        "php": ">=5.4",
        "doctrine/orm": "~2.5",
        "willdurand/hateoas-bundle": "0.3.*",
        "oro/doctrine-extensions": "1.0.*",
        "symfony-cmf/routing-bundle": "1.2.*",

        "sulu/sulu": "dev-develop",
        "sulu/product-bundle": "dev-develop",
        "massive/pdf-bundle": "dev-develop",
        "sulu/product-bundle": "dev-develop",
        "sulu/contact-extension-bundle": "dev-develop"
    },
    "require-dev": {
        "sensio/framework-extra-bundle":  "~3.0",
        "symfony/symfony": "2.6.*",
        "symfony/monolog-bundle": "2.4.*",
        "symfony-cmf/testing": "~1.2",
        "phpunit/phpunit": "~4.0.0",
        "jackalope/jackalope-doctrine-dbal": "~1.2.0",
        "jackalope/jackalope-jackrabbit": "~1.2.0",
        "knplabs/knp-snappy-bundle": "dev-master",
        "massive/search-bundle": "0.7.*",
        "sulu/test-bundle": "dev-develop",
        "sulu/document-manager": "dev-master"
    },
    "replace": {
        "sulu/sales-core-bundle": "self.version",
        "sulu/sales-order-bundle": "self.version",
        "sulu/sales-shipping-bundle": "self.version"
    },
    "autoload": {
        "psr-0": {
            "Sulu\\": "src"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "Sulu\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "sh ./bin/createvendors.sh"
        ],
        "post-update-cmd": [
            "sh ./bin/createvendors.sh"
        ]
    }
}
